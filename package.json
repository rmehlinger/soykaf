{
  "name": "soykaf",
  "version": "0.0.0",
  "description": "Character Management App for Shadowrun 5e",
  "main": "index.js",
  "scripts": {
    "start": "npm run build-assets && node server.js",
    "start-dev": "npm run watch & npm run live-reload & nodemon server.js",
    "watch": "npm run watch-js & npm run watch-css",
    "watch-js": "watchify src/main.coffee --transform coffeeify --extension=\".coffee\" --outfile static/scripts/bundle.js --verbose --debug",
    "build-js": "mkdir -p static/scripts && browserify src/main.coffee --transform coffeeify --extensions=\".coffee\" --outfile static/scripts/bundle.js",
    "watch-css": "nodemon -w css -e sass -x 'npm run build-css'",
    "build-css": "mkdir -p static/css && node-sass -r --output-style compressed css/soykaf.sass -o static/css",
    "build-assets": "npm run build-js && npm run build-css",
    "copy-css": "cp -ra css/*.css static/css",
    "live-reload": "live-reload static/**/* --port 9092",
    "heroku": "npm prune && npm i && cp -ra . \"/mnt/g/Dropbox (Personal)/Apps/Heroku/soykaf\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rmehlinger/soykaf.git"
  },
  "author": "Richard Mehlinger",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rmehlinger/soykaf/issues"
  },
  "homepage": "https://github.com/rmehlinger/soykaf#readme",
  "dependencies": {
    "bobtail": "^2.0.1",
    "bobtail-form": ">=0.2.1",
    "bobtail-storage": "^1.1.1",
    "bootstrap": "^3.3.7",
    "browserify": "^14.4.0",
    "jquery": "^3.2.1",
    "jquery-serializejson": "^2.8.1",
    "json-stable-stringify": "^1.0.1",
    "lodash.get": "^4.4.2",
    "underscore": "^1.8.3",
    "underscore.string": "^3.3.4",
    "browserify-coffeelint": "^1.2.0",
    "coffeeify": "^2.0.1",
    "express": "~4.15.3",
    "live-reload": "^1.1.0",
    "node-sass": "^4.5.3",
    "nodemon": "~1.11.0",
    "watchify": "^3.9.0"
  }
}

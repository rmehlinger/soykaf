{
  "name": "soykaf",
  "version": "0.0.0",
  "description": "Character Management App for Shadowrun 5e",
  "main": "index.js",
  "scripts": {
    "start": "npm run build-assets && node server.js",
    "start-dev": "npm run watch & npm run live-reload & nodemon server.js",
    "watch": "npm run watch-js & npm run watch-css",
    "watch-js": "watchify src/main.coffee --transform coffeeify --extension=\".coffee\" --outfile static/scripts/bundle.js --verbose",
    "watch-css": "npm run build-css && npm run build-css -- -w",
    "build-css": "node-sass -r --output-style compressed css/soykaf.sass -o static/css",
    "copy-css": "cp -ra css static/css",
    "live-reload": "live-reload static/scripts/bundle.js --port 9092"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rmehlinger/soykaf.git"
  },
  "author": "Richard Mehlinger",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rmehlinger/soykaf/issues"
  },
  "homepage": "https://github.com/rmehlinger/soykaf#readme",
  "dependencies": {
    "bobtail": "^1.8.2",
    "bobtail-storage": "^1.1.0",
    "bootstrap": "^3.3.7",
    "jquery": "^3.2.1",
    "jquery-serializejson": "^2.8.1",
    "mutation-summary": "^0.1.1",
    "underscore": "^1.8.3",
    "underscore.string": "^3.3.4"
  },
  "devDependencies": {
    "browserify": "^14.4.0",
    "browserify-coffeelint": "^1.2.0",
    "coffeeify": "^2.0.1",
    "express": "~4.9.8",
    "live-reload": "^1.1.0",
    "node-sass": "^4.5.3",
    "nodemon": "~1.8.1",
    "watchify": "^3.6.1"
  }
}

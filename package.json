{
  "name": "soykaf",
  "version": "0.0.0",
  "description": "Character Management App for Shadowrun 5e",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && npm run minify && node server.js",
    "start-dev": "npm run watch & npm run live-reload & nodemon server.js",
    "mkdirs": "mkdir -p static/scripts && mkdir -p static/css",
    "watch": "npm run mkdirs && npm run watch-js & npm run watch-css",
    "watch-js": "npm run watchify | npm run exorcist",
    "watch-css": "nodemon -w css -e sass -x 'npm run build-css'",
    "watchify": "watchify src/main.coffee --transform coffeeify --extension=\".coffee\" --verbose --debug -o '$(npm run exorcist)'",
    "build": "npm run mkdirs && npm run build-js && npm run build-css",
    "build-js": "npm run browserify | npm run exorcist",
    "build-css": "npm run copy-darkly && npm run sassify",
    "browserify": "browserify src/main.coffee --transform coffeeify --extensions=\".coffee\" --debug",
    "exorcist": "exorcist static/scripts/bundle.js.map > static/scripts/bundle.js",
    "minify": "uglifyjs -mc --source-map -o static/scripts/bundle.js static/scripts/bundle.js",
    "sassify": "node-sass -r --output-style compressed css/soykaf.sass -o static/css",
    "copy-darkly": "wget https://bootswatch.com/slate/bootstrap.min.css -O static/css/slate-theme.css",
    "copy-css": "cp -ra css/*.css static/css",
    "live-reload": "live-reload static/**/* --port 9092"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rmehlinger/soykaf.git"
  },
  "author": "Richard Mehlinger",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rmehlinger/soykaf/issues"
  },
  "homepage": "https://github.com/rmehlinger/soykaf#readme",
  "dependencies": {
    "bobtail": "^2.0.1",
    "bobtail-form": "^0.3.0",
    "bobtail-storage": "^1.1.1",
    "bootstrap": "^3.3.7",
    "browserify": "^14.4.0",
    "cherrytree": "^2.4.1",
    "coffeeify": "^2.0.1",
    "express": "~4.15.3",
    "jquery": "^3.2.1",
    "jquery-serializejson": "^2.8.1",
    "json-stable-stringify": "^1.0.1",
    "lodash.get": "^4.4.2",
    "node-sass": "^4.5.3",
    "nodemon": "~1.11.0",
    "uglify-es": "^3.0.26",
    "underscore": "^1.8.3",
    "underscore.string": "^3.3.4"
  },
  "devDependencies": {
    "exorcist": "^0.4.0",
    "live-reload": "^1.1.0",
    "watchify": "^3.9.0"
  }
}
